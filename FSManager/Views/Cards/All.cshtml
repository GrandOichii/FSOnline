@{
    ViewData["Title"] = "Cards";
}

@model CardsPage

<div class="text-center">
    <h1 class="display-4">Cards</h1>
    <br>
    <table class="table">
        <thead>
            <tr>
                <th>Key</th>
                <th>Name</th>
                <th>Text</th>
                <th>Collection</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var card in Model.Cards) {
                    <tr>
                        <td>
                            <a asp-action="ByKey" asp-route-key="@card.Key">@card.Key</a>
                        </td>
                        <td>@card.Name</td>
                        <td>@card.Text</td>
                        <td>@card.Collection</td>
                        <td>
                            <a href="@card.ImageUrl">
                                <img 
                                    src="@card.ImageUrl" 
                                    alt="-" 
                                    class="img-fluid"
                                    style="width: 320px"
                                >
                            </a>
                        </td>
                        <td>
                            <a class="btn btn-primary" asp-action="Delete" asp-route-key="@card.Key">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
        <a class="page-link" asp-route-page=0 aria-label="First">
            <span aria-hidden="true">&laquo;</span>
        </a>
        <li class="page-item">
        <a class="page-link" asp-route-page=@(@Model.Page - 1) aria-label="Previous">
            <span aria-hidden="true">&lsaquo;</span>
        </a>
        </li>
        <li class="page-item"><a class="page-link" asp-route-page=0>1</a></li>
        <li class="page-item"><a class="page-link" asp-route-page=1>2</a></li>
        <li class="page-item"><a class="page-link" asp-route-page=2>3</a></li>
        <li class="page-item">
        <a class="page-link" asp-route-page=@(@Model.Page + 1) aria-label="Next">
            <span aria-hidden="true">&rsaquo;</span>
        </a>
        </li>
    </ul>
    </nav>
    <a class="btn btn-primary" asp-action="CreateForm">Create</a>
</div>