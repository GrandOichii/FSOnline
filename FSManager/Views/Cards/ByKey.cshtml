@model FSManager.Dto.Cards.GetCardWithRelations

@{
    ViewData["Title"] = $"Card {Model.Name}";
}

<h2>@Model.Name</h2>
<div class="container">
    <div class="row">
        <div class="col">
            <h3>Text</h3>
            <p>@Model.Text</p>
            <p>@Model.Script</p>
        </div>
        <div class="col">
            <img src="@Model.ImageUrl" alt="-" class="img-fluid" style="width: 320px">
        </div>
    </div>
</div>
<h3>Related cards</h3>
<div class="container-fluid">
    @{
        foreach (var card in Model.RelatedCards) {
            <a asp-action="ByKey" asp-route-key="@card.Key">
                <img src="@card.ImageUrl" alt="">
            </a>
        }
    }
</div>